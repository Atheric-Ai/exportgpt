{
  "manifest_version": 3,
  "name": "ExportGPT",
  "version": "1.0.0",
  "description": "Export conversations from ChatGPT, Claude, and Poe",
  "permissions": [
    "activeTab",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://poe.com/*",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://claude.ai/*", "https://poe.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "exportgpt@atheric-ai.github.io"
    }
  }
}
